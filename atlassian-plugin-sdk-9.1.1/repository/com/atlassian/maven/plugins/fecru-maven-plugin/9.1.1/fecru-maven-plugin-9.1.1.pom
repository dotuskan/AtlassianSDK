<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.atlassian.amps</groupId>
        <artifactId>atlassian-amps-product-plugins</artifactId>
        <version>9.1.1</version>
    </parent>

    <groupId>com.atlassian.maven.plugins</groupId>
    <artifactId>fecru-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>

    <name>FishEye/Crucible Maven Plugin</name>

    <dependencies>
        <dependency>
            <groupId>com.atlassian.maven.archetypes</groupId>
            <artifactId>fecru-plugin-archetype</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>invoker</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <configuration>
                            <scriptVariables>
                                <artifactId>${invoker.artifactId}</artifactId>
                                <product>${invoker.product}</product>
                            </scriptVariables>
                        </configuration>
                    </plugin>
                </plugins>
                <!-- pass environment properties into the SDK debug integration test -->
                <testResources>
                    <testResource>
                        <targetPath>${project.build.directory}/it/debug</targetPath>
                        <filtering>false</filtering>
                        <directory>src/test/resources</directory>
                        <includes>
                            <include>env.properties</include>
                        </includes>
                    </testResource>
                </testResources>
            </build>
            <properties>
                <invoker.product>fecru</invoker.product>
                <invoker.test>
                    !achooTest,
                    compressLocalizedResourcesTest,
                    compressResourcesTest,
                    compressResourcesWithClosureOptionLanguageInTest,
                    compressResourcesWithIncludeParamTest,
                    copyBundledDependenciesTest,
                    copyBundledDependenciesWithFeManifestsTest,
                    copyFeBundledMetadataTest,
                    copyFeModuleManifestsWithFilesOutsideModuleTest,
                    copyFeModuleManifestsWithIncludedNotManifestFileTest,
                    copyFeModuleManifestsWithIncrementalBuildTest,
                    copyFeModuleManifestsWithNoIncludedFilesTest,
                    copyFeModuleManifestsWithPackagePhaseTest,
                    copyFeModuleManifestsWithSkipTest,
                    copyFeModuleManifestsWithStandaloneGoalTest,
                    !createOsgiJavaConfigTest,
                    !createTest,
                    !debugTest,
                    debugWithPortConflictTest,
                    !debugWithTestGroupTest,
                    extractDependenciesTest,
                    filterPluginDescriptorWithPluginDescriptorTest,
                    filterPluginDescriptorWithoutPluginDescriptorTest,
                    generateManifestWhenDependencyContainsModuleInfoTest,
                    generateManifestWithInstructionsTest,
                    generateManifestWithNoInstructionsButIsAtlassianPluginTest,
                    generateManifestWithNoInstructionsNorIsAtlassianPluginTest,
                    generateManifestWithNoInstructionsTest,
                    generateObrTest,
                    generateRestDocsTest,
                    generateRestDocsJava17Test,
                    generateRestV2DocsTest,
                    !integrationTest,
                    integrationTestWithPortConflictTest,
                    !integrationTestWithTestGroupTest,
                    jarWithExistingManifestTest,
                    !quickreloadTest,
                    !remoteTest,
                    reportFeManifestAssociationsWithExternalConfigTest,
                    reportFeManifestAssociationsWithInlineConfigTest,
                    reportFeManifestAssociationsWithSkipTest,
                    reportFeManifestAssociationsWithStrictAllFilesDeclarationTest,
                    reportFeManifestAssociationsWithWarTest,
                    reportFeManifestAssociationsWithWebpackConfigTest,
                    !runParallelTest,
                    !runTest,
                    runWithPortConflictTest,
                    !runWithTestGroupTest,
                    unitTest,
                    validateBannedDependenciesTest,
                    validateBannedDependenciesWithBannedTest,
                    validateManifestSkipValidationTest,
                    validateManifestWithInvalidManifestTest,
                    validateManifestWithValidManifestTest,
                    verifyFeManifestAssociationsProductSpecificTest,
                    verifyFeManifestAssociationsWithImplicitEntrypointTest
                </invoker.test>
                <product.data.version>${fecru.data.version}</product.data.version>
                <product.version>${fecru.version}</product.version>
                <project.version>${project.version}</project.version>
                <product.database.type>no-database-type</product.database.type>
            </properties>
        </profile>
    </profiles>
</project>
